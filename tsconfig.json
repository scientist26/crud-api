{
    "compilerOptions": {
      "module": "ESNext",     
      "moduleResolution": "Node",
      "target": "ESNext", 
      "strict": true,         
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }